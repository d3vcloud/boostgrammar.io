---
import Layout from '@layouts/base.astro'
import FooterLanding from '@components/landing/Footer.astro'
import HeaderLanding from '@components/landing/Header.astro'
import SupportLanding from '@components/landing/Support.astro'
---

<Layout>
  <div class='flex min-h-screen flex-col bg-[#0d1117]'>
    <HeaderLanding />
    <main>
      <section class='relative mt-14 mb-8 px-6 text-center'>
        <div
          class='absolute w-3/4 h-0 left-1/4 top-1/2 rounded-3xl shadow-[0_0_150px_100px_rgba(0,99,198,0.15)]'
        >
        </div>
        <SupportLanding />
        <h1
          class='mx-auto max-w-md sm:max-w-4xl mt-5 text-4xl font-bold leading-[1.15] text-white sm:text-6xl sm:leading-[1.15]'
        >
          <span class='text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff]'>
            Boost
          </span> your grammar skills and write with confidence
        </h1>
        <p class='mx-auto max-w-md sm:max-w-xl mt-5 text-lg text-blue-100/70 sm:text-xl'>
          Have issues with your grammar skills? Let
          <span
            class='font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff]'
            >boostgrammar.io</span
          > help you out and say goodbye to your grammar confusions.
        </p>
        <!-- <div class='mx-auto mt-10 max-w-fit space-x-4'>
            <a
              class='rounded-full border border-white bg-white py-2.5 px-5 text-base font-semibold text-black shadow-lg transition-all hover:bg-white/90'
              href='#getstarted'
            >
              Get Started
            </a>
          </div> -->
      </section>
      <section class='mx-auto mt-40 mb-10 max-w-md px-6 sm:max-w-5xl flex flex-col gap-1'>
        <h2
          class='font-display text-2xl font-bold leading-tight text-white sm:text-4xl sm:leading-tight'
        >
          Test your knowledge of
          <span
            class='font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff]'
            >grammar</span
          >
        </h2>
        <p class='mt-5 text-base text-blue-100/70 sm:text-xl'>
          Just type or paste your text and you'll see the results on the right side.
        </p>
        <div class='mt-4 flex md:flex-row flex-col gap-2'>
          <!-- Kan yu jelp me with mi gramar? -->
          <textarea
            id='content'
            rows='4'
            class='bg-[#0d1117] p-3 w-full text-lg sm:text-xl text-white rounded-lg border border-gray-700 placeholder-gray-500 resize-none focus:outline-none focus:border-gray-600 focus:ring-1 focus:ring-gray-600'
            placeholder='Write whatever you want ðŸ‘€'></textarea>
          <div
            class='border border-gray-700 rounded-lg px-2 bg-[#0d1117] overflow-y-auto w-full h-96 sm:h-80'
          >
            <p
              class='p-3 font-medium dark:text-white text-lg sm:text-xl selection:text-black selection:bg-[#F1E740]'
            >
              Here we have the results ðŸ‘€
            </p>
          </div>
        </div>
      </section>
    </main>
    <FooterLanding />
  </div>
</Layout>
