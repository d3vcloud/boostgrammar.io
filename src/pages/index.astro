---
import Layout from '@layouts/base.astro'
import FooterLanding from '@components/landing/Footer.astro'
import HeaderLanding from '@components/landing/Header.astro'
import SupportLanding from '@components/landing/Support.astro'
---

<Layout>
  <div class='flex min-h-screen flex-col bg-[#0d1117]'>
    <HeaderLanding />
    <main>
      <section class='relative mt-14 px-6 text-center mb-28 lg:mb-36'>
        <div
          class='absolute w-3/4 h-0 left-1/4 top-1/2 rounded-3xl shadow-[0_0_150px_100px_rgba(0,99,198,0.15)]'
        >
        </div>
        <SupportLanding />
        <h1
          class='mx-auto max-w-md sm:max-w-4xl mt-5 text-4xl font-bold leading-[1.15] text-white sm:text-6xl sm:leading-[1.15]'
        >
          <span class='text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff]'>
            Boost
          </span> your grammar skills and write with confidence
        </h1>
        <p class='mx-auto max-w-md sm:max-w-xl mt-5 text-lg text-blue-100/70 sm:text-xl'>
          Have issues with your grammar skills? Let
          <span
            class='font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff]'
            >boostgrammar.io</span
          > help you out and say goodbye to your grammar confusions.
        </p>
        <div class='mx-auto mt-10 max-w-fit space-x-4'>
          <a
            class='rounded-full border border-white bg-white py-2.5 px-5 text-base font-semibold text-black shadow-lg transition-all hover:bg-white/90'
            href='/dashboard'
          >
            Get Started
          </a>
        </div>
      </section>
      <!-- Dashboard section -->
      <section class='relative mb-8 px-6'>
        <div
          class='absolute w-3/4 h-0 left-1/4 top-1/2 rounded-3xl shadow-[0_0_150px_100px_rgba(0,99,198,0.15)]'
        >
        </div>
        <div
          class='flex justify-between items-center flex-col lg:flex-row gap-4 mx-auto max-w-md sm:max-w-4xl'
        >
          <div class='w-full'>
            <h2
              class='mt-5 leading-[1.15] text-white sm:leading-[1.15] text-3xl sm:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff] font-semibold text-left'
            >
              Access your documents
            </h2>
            <div class='pb-8 mt-6 text-lg text-neutral-300 border-b border-gray-700 text-left'>
              <p>A dashboard where you can see all your documents that you have created.</p>
            </div>
            <div class='mt-3 xl:max-h-16'>
              <a class='text-white' href='/dashboard'>
                <span class='font-medium'>Learn More</span>
                <span class='inline-block'>â†’</span>
              </a>
            </div>
          </div>
          <div class='w-full shadow-lg'>
            <div class='relative'>
              <div class='relative overflow-hidden rounded-3xl'>
                <div
                  class='absolute bg-cover bg-gradient-to-r from-sky-500 to-indigo-500 inset-0 w-full h-full'
                >
                </div>
                <div class='p-8 sm:p-10 relative text-center'>
                  <div class='flex overflow-hidden shadow-lg rounded-3xl'>
                    <img
                      src='/landing/dashboard.jpg'
                      alt='Dashboard screenshot'
                      loading='lazy'
                      class='object-cover'
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Synonyms block -->
      <section class='relative mb-8 mt-36 px-6'>
        <div
          class='absolute w-3/4 h-0 left-1/4 top-1/2 rounded-3xl shadow-[0_0_150px_100px_rgba(0,99,198,0.15)]'
        >
        </div>
        <div
          class='flex justify-between items-center flex-col lg:flex-row gap-4 mx-auto max-w-md sm:max-w-4xl'
        >
          <div class='w-full lg:w-8/12 shadow-lg'>
            <div class='relative'>
              <div class='relative overflow-hidden rounded-3xl'>
                <div
                  class='absolute bg-cover bg-gradient-to-r from-sky-500 to-indigo-500 inset-0 w-full h-full'
                >
                </div>
                <div class='p-6 sm:p-10 relative text-center'>
                  <div class='flex overflow-hidden shadow-lg rounded-3xl'>
                    <img
                      src='/landing/synonyms.jpg'
                      alt='Synonyms feature screenshot'
                      loading='lazy'
                      class='object-cover'
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div>
            <h2
              class='mt-5 leading-[1.15] text-white sm:leading-[1.15] text-3xl sm:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff] font-semibold text-left'
            >
              Synonyms
            </h2>
            <div class='pb-8 mt-6 text-lg text-neutral-300 border-b border-gray-700 text-left'>
              <p>Get synonyms by double-clicking over a word.</p>
            </div>
          </div>
        </div>
      </section>
      <!-- Results block -->
      <section class='relative mb-20 px-6'>
        <div
          class='absolute w-3/4 h-0 left-1/4 top-1/2 rounded-3xl shadow-[0_0_150px_100px_rgba(0,99,198,0.15)]'
        >
        </div>
        <div class='flex justify-between flex-col gap-4 mx-auto max-w-md sm:max-w-4xl'>
          <div class='text-left'>
            <h2
              class='mt-5 leading-[1.15] text-white sm:leading-[1.15] text-3xl sm:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-[#7debf2] to-[#60a4ff] font-semibold text-left'
            >
              Feedback
            </h2>
            <div class='pb-8 mt-6 text-lg text-neutral-300 border-b border-gray-700 text-left'>
              <p>Get details about your mistakes and how to fix them.</p>
            </div>
          </div>
          <div class='shadow-lg'>
            <div class='relative'>
              <div class='relative overflow-hidden rounded-3xl'>
                <div
                  class='absolute bg-cover bg-gradient-to-r from-sky-500 to-indigo-500 inset-0 w-full h-full'
                >
                </div>
                <div class='p-6 sm:p-10 relative text-center'>
                  <div class='flex overflow-hidden shadow-lg rounded-3xl'>
                    <img
                      src='/landing/results.jpg'
                      alt='Feedback feature screenshot'
                      loading='lazy'
                      class='object-cover'
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <FooterLanding />
  </div>
</Layout>
